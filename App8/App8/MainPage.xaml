                    <Button x:Name="Online" Text="Онлайн табло" Clicked="Button_Clicked_4"/>
                    <Button x:Name="LogIn" Text="вход" Clicked="Button_Clicked_1"/>
                    <Button x:Name="sett" Text="вход" Clicked="Sett_Clicked"/>
                    <Picker x:Name="picker" SelectedIndexChanged="picker_SelectedIndexChanged" Margin="0,20,0,0">
                        <Picker.Items>
                            <x:String>Русский</x:String>
                            <x:String>Английский</x:String>
                        </Picker.Items>
                    </Picker>
                </StackLayout>
            </ContentPage.Content>
        </ContentPage>
    </MasterDetailPage.Master>
